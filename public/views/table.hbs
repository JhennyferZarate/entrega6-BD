<div class="container" style="margin-top: 4rem">
    {{#if products.length}}
        <div class="table-responsive">
            <table class="table table-dark">
                <thead>
                    <tr style="color: white;"> 
                        <th>Nombre</th>
                        <th>Precio</th>
                        <th>Foto</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each products}}
                        <tr>
                            <td>{{this.title}}</td>
                            <td>${{this.price}}</td>
                            <td><img src={{this.thumbnail}} alt={{this.title}} style="max-width: 4rem"></td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    {{else}}
        <h3 class="alert alert-danger">No se encontraron datos</h3>
    {{/if}}
</div>